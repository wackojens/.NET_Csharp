@model mvcSchool.Models.CourseModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<h4>Course</h4>
<hr />
<form asp-action="Details" class="row g-3 justify-content-around">
    <div class="col-md-4">
        <div class="row">
            <dt class = "col-sm-4">
                @Html.DisplayNameFor(model => model.CourseName)
            </dt>
            <dd class = "col-sm-8">
                @Html.DisplayFor(model => model.CourseName)
            </dd>
        </div>
        <div class="row">
            <dt class = "col-sm-4">
                @Html.Label("Teacher")
            </dt>
            <dd class = "col-sm-8">
                @ViewBag.teacher.FullName
            </dd>
        </div>
    </div>
    <div class="col-md-4">
	    <table class="table">
	        <thead>
	            <tr>
	                <th>
	                    @Html.Label("Students")
	                </th>
	                <th>
	                    @Html.DisplayName("Results")
	                </th>
	            </tr>
	        </thead>
	        <tbody>
			    @foreach (var item in ViewBag.students)
			    {
				    <tr>
					    <td>
						    @item.FullName
					    </td>
					    <td>
						    <input class="form-control" name="@item.Id" value="@item.CourseResults[Model.Id]" type="number" min="0" step="0.01" style="text-align:right;"/>
					    </td>
				    </tr>
			    }
		    </tbody>
	    </table>
    </div>
    <div class="col-md-12">
        <a asp-action="Index" class="btn btn-primary float-end" style="margin-left:10px;">Back</a>
        <input type="submit" value="Save" class="btn btn-primary float-end" />
    </div>
</form>